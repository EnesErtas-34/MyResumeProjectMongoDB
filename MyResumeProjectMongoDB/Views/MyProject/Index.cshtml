@model List<MyProject>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<br />
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Resim</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td><img src="@item.ImageURL" style="height:75px;width:75px;border-radius:50%" /></td>
                <td><a href="/MyProject/DeleteMyProject/@item.MyProjectID" class="btn btn-danger">Sil</a></td>
                <td><a href="/MyProject/UpdateMyProject/@item.MyProjectID" class="btn btn-success">Güncelle</a></td>


            </tr>
        }

    </table>
    <a href="/MyProject/CreateMyProject" class="btn btn-outline-success">Yeni Proje Girişi</a>
</div>


