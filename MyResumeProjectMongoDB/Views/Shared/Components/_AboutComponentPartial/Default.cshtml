@model List<About>

<div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
    @foreach (var item in Model)
    {
        <div class="d-flex align-items-center mb-5">
            <div class="years flex-shrink-0 text-center me-4">
                <h1 class="display-1 mb-0">1</h1>
                <h5 class="mb-0">Yıldır</h5>
            </div>
            <h3 class="lh-base mb-0">@item.Title</h3>
        </div>
        <p class="mb-4">@item.Description</p>
        <p class="mb-3"><i class="far fa-check-circle text-primary me-3"></i>@item.Feature1</p>
        <p class="mb-3"><i class="far fa-check-circle text-primary me-3"></i>@item.Feature2</p>
        <p class="mb-3"><i class="far fa-check-circle text-primary me-3"></i>@item.Feature2</p>
        <a class="btn btn-primary py-3 px-5 mt-3" href="">Devamını Oku</a>
    }
</div>