@model List<Testimonial>

<div class="container-fluid bg-light py-5 my-5" id="testimonial">
    <div class="container-fluid py-5">
        <h1 class="display-5 text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Referanslar</h1>
        <div class="row justify-content-center">
            <div class="col-lg-3 d-none d-lg-block">
                <div class="testimonial-left h-100">
                    <img class="img-fluid wow fadeIn" data-wow-delay="0.1s" src="~/proman-1.0.0/img/testimonial-1.jpg" alt="">
                    <img class="img-fluid wow fadeIn" data-wow-delay="0.3s" src="~/proman-1.0.0/img/testimonial-2.jpg" alt="">
                    <img class="img-fluid wow fadeIn" data-wow-delay="0.5s" src="~/proman-1.0.0/img/testimonial-3.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="owl-carousel testimonial-carousel">

                    @foreach(var item in Model)
                    {
                    <div class="testimonial-item text-center">
                        <div class="position-relative mb-5">
                            <img class="img-fluid rounded-circle border border-secondary p-2 mx-auto" src="@item.ImageUrl" alt="">
                            <div class="testimonial-icon">
                                <i class="fa fa-quote-left text-primary"></i>
                            </div>
                        </div>
                        <p class="fs-5 fst-italic">@item.Comment</p>
                        <hr class="w-25 mx-auto">
                        <h5>@item.NameSurname</h5>
                        <span>@item.Title</span>
                    </div>
                    
                    }
                </div>
            </div>
            <div class="col-lg-3 d-none d-lg-block">
                <div class="testimonial-right h-100">
                    <img class="img-fluid wow fadeIn" data-wow-delay="0.1s" src="~/proman-1.0.0/img/testimonial-1.jpg" alt="">
                    <img class="img-fluid wow fadeIn" data-wow-delay="0.3s" src="~/proman-1.0.0/img/testimonial-2.jpg" alt="">
                    <img class="img-fluid wow fadeIn" data-wow-delay="0.5s" src="~/proman-1.0.0/img/testimonial-3.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
</div>