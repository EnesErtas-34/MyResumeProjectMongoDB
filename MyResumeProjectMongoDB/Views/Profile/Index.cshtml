@model List<Profile>
@{
    ViewData["Title"] = "Index";
    int count = 0;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>Başlık 1</th>
            <th>Başlık 2</th>
            <th>Başlık 3</th>
            <th>Görsel</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.NameSurname</td>
                <td>@item.Title1</td>
                <td>@item.Title2</td>
                <td>@item.Title3</td>
                <td><img src="@item.ImageURL" style="height:75px;width:75px;border-radius:50%" /></td>
                <td><a href="/Profile/DeleteProfile/@item.ProfileID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Profile/UpdateProfile/@item.ProfileID" class="btn btn-success">Güncelle</a></td>

            </tr>

        }
    </table>
    <a href="/Profile/CreateProfile" class="btn btn-primary">Yeni Profil Girişi</a>

</div>

